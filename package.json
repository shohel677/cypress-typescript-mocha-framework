{
  "name": "cypress_typescript_mocha",
  "version": "1.0.0",
  "scripts": {
    "test": "cypress run --reporter mochawesome --reporter-options reportDir=cypress/reports/mochawesome,overwrite=false,html=false,json=true",
    "cy:open": "cypress open",
    "generate-report": "npx mochawesome-merge cypress/reports/mochawesome/*.json | npx mochawesome-report-generator --reportDir cypress/reports/mochawesome/html",
    "cy:report": "npm run test && npm run generate-report"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "cypress": "^13.0.0",
    "cypress-xpath": "^2.0.1",
    "mocha": "^10.0.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  }
}
